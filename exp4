#include <stdio.h>

int main() {
    char ch;

    printf("Enter operators (Ctrl+Z to stop):\n");

    while ((ch = getchar()) != EOF) {

        if (ch == ' ' || ch == '\n')
            continue;

        if (ch == '+' || ch == '-' || ch == '*' || ch == '/')
            printf("%c : Valid Operator\n", ch);
        else
            printf("%c : Invalid Operator\n", ch);
    }
    return 0;
}
