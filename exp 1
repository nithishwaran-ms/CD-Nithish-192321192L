#include <stdio.h>
#include <ctype.h>
#include <string.h>

void lexer(char *source) {
    int i = 0;
    while (source[i] != '\0') {
        // 1. Skip Whitespace
        if (isspace(source[i])) {
            i++;
            continue;
        }

        // 2. Skip Comments (// style)
        if (source[i] == '/' && source[i+1] == '/') {
            while (source[i] != '\n' && source[i] != '\0') i++;
            continue;
        }

        // 3. Identify Identifiers (Letters)
        if (isalpha(source[i])) {
            printf("Identifier: ");
            while (isalnum(source[i])) {
                putchar(source[i++]);
            }
            printf("\n");
        } 
        // 4. Identify Constants (Numbers)
        else if (isdigit(source[i])) {
            printf("Constant:   ");
            while (isdigit(source[i])) {
                putchar(source[i++]);
            }
            printf("\n");
        } 
        // 5. Identify Operators
        else if (strchr("+-*/=", source[i])) {
            printf("Operator:   %c\n", source[i++]);
        } 
        else {
            i++; // Skip unknown characters
        }
    }
}

int main() {
    char code[] = "int x = 50 + 20; // Example code";
    lexer(code);
    return 0;
}
